---
import Layout from '../../layouts/Layout.astro';
import DashboardGrid from '../../components/DashboardGrid.jsx';
import curriculum from '../../data/curriculum.json';

const grammarCurriculum = curriculum.map(level => ({
    ...level,
    modules: level.modules.filter(m => m.type === 'grammar')
})).filter(level => level.modules.length > 0);
---

<Layout title="Grammar Modules">
    <div class="space-y-8">
        <div class="text-center">
            <h1 class="text-4xl font-bold text-white mb-4">Grammar Lessons</h1>
            <p class="text-gray-400">Master the rules of English with structured lessons and quizzes.</p>
        </div>
        <DashboardGrid client:load curriculum={grammarCurriculum} />
    </div>
</Layout>
