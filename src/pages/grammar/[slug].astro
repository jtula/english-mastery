---
import Layout from '../../layouts/Layout.astro';
import GrammarLesson from '../../components/GrammarLesson.jsx';
import grammarLessons from '../../data/grammar.json';
import curriculum from '../../data/curriculum.json';

const { slug } = Astro.params;

let module = curriculum.flatMap(level => level.modules).find(m => m.id === slug && m.type === 'grammar');

if (!module) {
    try {
        const { db, Lesson, eq } = await import('astro:db');
        const saved = await db.select().from(Lesson).where(eq(Lesson.id, slug));
        if (saved.length > 0) {
            module = saved[0];
        }
    } catch (e) {
        console.error("DB Module Lookup Error:", e);
    }
}

if (!module) {
    return Astro.redirect('/404');
}

const existingContent = grammarLessons.find(l => l.id === module.id);
let initialLesson = existingContent || null;

if (!initialLesson) {
    try {
        const { db, Lesson, eq } = await import('astro:db');
        const savedLessons = await db.select().from(Lesson).where(eq(Lesson.id, module.id));
        if (savedLessons && savedLessons.length > 0) {
            initialLesson = savedLessons[0].content;
        }
    } catch (e) {
        console.error("DB Fetch Error:", e);
    }
}

const lessonId = module.id;
const lessonTitle = module.title;
---

<Layout title={lessonTitle}>
	<div class="max-w-4xl mx-auto space-y-12">
        <a href="/" class="inline-flex items-center text-gray-400 hover:text-white transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 mr-2" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" /></svg>
            Back to Dashboard
        </a>

        <GrammarLesson 
            client:load 
            initialLesson={initialLesson} 
            lessonId={lessonId}
            lessonTitle={lessonTitle}
        />
	</div>
</Layout>
