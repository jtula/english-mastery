---
import '@fontsource/outfit';
import '../styles/global.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Learn American English with AI-powered tools" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | English Mastery</title>
	</head>
	<body class="bg-gray-950 text-gray-50 font-sans antialiased selection:bg-indigo-500 selection:text-white overflow-x-hidden">
		
		<div class="fixed inset-0 z-[-1] bg-gray-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"></div>

		<nav class="fixed top-0 z-50 w-full border-b border-white/10 bg-gray-950/50 backdrop-blur-xl transition-all duration-300">
			<div class="container mx-auto px-6 h-16 flex items-center justify-between">
				<a href="/" class="text-xl font-bold tracking-tight bg-gradient-to-r from-indigo-400 to-cyan-400 bg-clip-text text-transparent hover:opacity-80 transition-opacity">
					English<span class="font-light text-gray-400">Mastery</span>
				</a>
				<div class="flex items-center gap-6 text-sm font-medium">
					<a href="/grammar" class="text-gray-400 hover:text-white transition-colors">Grammar</a>
					<a href="/speaking" class="text-gray-400 hover:text-white transition-colors">Speaking</a>
				</div>
			</div>
		</nav>

		<main class="container mx-auto px-6 pt-28 pb-20 min-h-screen">
			<slot />
		</main>

		<footer class="border-t border-white/10 py-8 bg-gray-950/50">
			<div class="container mx-auto px-6 text-center text-sm text-gray-600">
				<p>&copy; {new Date().getFullYear()} English Mastery. Built for accelerated learning.</p>
			</div>
		</footer>
	</body>
</html>

<style is:global>
	:root {
		--font-sans: 'Outfit', system-ui, sans-serif;
	}
	body {
		font-family: var(--font-sans);
	}
</style>
